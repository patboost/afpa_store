{% extends 'base.html.twig' %}

{% block title %}Mini Shop: Liste des catégories{% endblock %}

{% block body %}
<h1 class="text-center">Gestion des catégories</h1>

    <table class="table table-hover">
        <thead>
            <tr class="table-info">
                <th class="text-center">#</th>
                <th class="text-center">Nom catégorie</th>
                <th colspan="2" class="text-center"><a href="{{ path('new_cat') }}" class="btn btn-success fa fa-plus-square"></a></th>
            </tr>
        </thead>
        <tbody>
            {% for cat in cats %}
                <tr class="
                    {% if loop.index is divisible by(2) %}
                        table-light
                    {% else %}
                        table-dark
                    {% endif %}">
                    <td class="text-center">{{ cat.id }}</td>
                    <td class="text-center">{{ cat.name }}</td>
                    <td><a href="{{ path('edit_cat', {'id': cat.id}) }}" class="fa fa-edit"></a></td>
                    <td><a href="{{ path('delete_cat', {'id': cat.id}) }}" class="fa fa-trash"></a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
